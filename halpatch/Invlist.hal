procedure InvoiceRn(record RcVc RepSpec)
begin
  record IVVc IVr;
  record IVVc IV2r;
  record CUVc CUr;
  record ObjVc OBr;
  record TRVc TRr;
  record ORVc ORr;
  record BaseCurBlock bascur;
  record MainStockBlock MainStockRec;
