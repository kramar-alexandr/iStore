  BlockLoad(ARb);
  BlockLoad(GenOptRec);
  chsum = false;
  chrsum = false;
  MatRowGet(WSr,rownr,WSrw);
  WSrw.Price = BlankVal;
  WSrw.vRebate = BlankVal;  
