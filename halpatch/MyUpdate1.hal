global updating procedure MyChangeBalAcc1Mn(record RcVc RepSpec)
begin
record ObjBalVc OBr;
val debit,credit,turnover,bal;
record ObjVc Objr;  
record SMVc SMr;
row SMVc SMrw;
integer i,j,k,mtrw,smmtrw;
record TRVc TRr;
row TRVc TRrw;
