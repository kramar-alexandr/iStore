function Boolean WSVc_PasteArtCode(var record WSVc WSr,Integer rownr)
BEGIN
  Boolean res;
  Boolean chsum;
  Boolean chrsum;
  record INVc INr;
  row WSVc WSrw;
  row WSVc WS2rw;
  val itemtype;
  val t,s,price,vreb,baseprice,temp,tax2prc;
